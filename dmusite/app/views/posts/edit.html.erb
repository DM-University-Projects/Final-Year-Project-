<h1>Edit Post</h1>
<%= form_for :post, url: post_path(@post), method: :patch do |f| %>
 <% if @post.errors.any? %>
       <% @post.errors.full_messages.each do |msg| %>
       <div class="alert alert-danger"><%= msg %></div>
   <% end %>
    <% end %>
<!-- This is an If Statment which says that if post error.any then we want to
 look throught the messages and tnhen  outpout the messages wrap within an alert div -->
<p>
  <%= f.label :title %><br>
  <%= f.text_field(:title, {:class => 'form-control'}) %>
</p>

<p>
  <%= f.label :body %><br>
  <%= f.text_area(:body, {:class => 'form-control'}) %>
</p>

<p>
  <%= f.submit({:class => 'btn btn-primary'})%>
</p>

<% end %>
