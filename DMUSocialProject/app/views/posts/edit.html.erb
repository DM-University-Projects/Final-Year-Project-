
    <img src="/dmubanner1.jpg" class="profile-banner">
    <div class="row">


            <% if current_user %>
              <div class="panel panel-default post-form-panel">
                <div class="panel-body row">

                  <div class="col-sm-1">
                    <img src="\avatar1.png" class="rounded-img" height="35px" width="35px"></img>
                  </div>
                  <div class="col-sm-11">
                    <%= form_for @post do |f| %>
                          <div class="field" style="margin-left: 10px;">
                            <%= f.text_field :content, autofocus: true, class: "form-control" %>
                            <span style="float: right; margin-top: 3px;"><%= f.submit "Update Post", class: "btn" %></span>
                           <center><h1>Edit Post</h1><center>
                          </div>

                    <% end %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>

<br>
